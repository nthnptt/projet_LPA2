<p id="notice"><%= notice %></p>

<h1>Listing Towns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Postal code</th>
      <th>Lat</th>
      <th>Long</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @towns.each do |town| %>
      <tr>
        <td><%= town.name %></td>
        <td><%= town.postal_code %></td>
        <td><%= town.lat %></td>
        <td><%= town.long %></td>
        <td><%= link_to 'Show', town %></td>
        <td><%= link_to 'Edit', edit_town_path(town) %></td>
        <td><%= link_to 'Destroy', town, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

