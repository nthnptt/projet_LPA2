<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @town.name %>
</p>

<p>
  <strong>Postal code:</strong>
  <%= @town.postal_code %>
</p>

<p>
  <strong>Lat:</strong>
  <%= @town.lat %>
</p>

<p>
  <strong>Long:</strong>
  <%= @town.long %>
</p>

<% if @weather != nil %>
  <p>
    <strong>Météo:</strong>
    <%= @weather.summary %>
  </p>

  <p>
    <strong>Température:</strong>
    <%= @weather.temperature %>
  </p>

  <p>
    <strong>Humidité:</strong>
    <%= @weather.humidity %>
  </p>
  <% else %>
  <p>
    Erreur de chargement de la météo
  </p>
  <% end %>


<%= link_to 'Edit', edit_town_path(@town) %> |
<%= link_to 'Back', towns_path %>
